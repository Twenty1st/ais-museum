<Application x:Class="museumAIS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:museumAIS"
             StartupUri="authorizeForm.xaml">
             <!--xmlns:local="clr-namespace:museumAIS.keeper_s_Forms"
             StartupUri="local:ecsponatForm.xaml">-->


    <Application.Resources>
        <Style x:Key="SelectableControlStyle" TargetType="UserControl">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
